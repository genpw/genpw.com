{
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source" : "**",
        "headers" : [
          {
            "key" : "X-Content-Type-Options",
            "value" : "nosniff"
          }
        ]
      },
      {
        "source" : "**/",
        "headers" : [
          {
            "key" : "X-XSS-Protection",
            "value" : "1; mode=block"
          },
          {
            "key" : "X-Frame-Options",
            "value" : "DENY"
          },
          {
            "key" : "Content-Security-Policy",
            "value" : "default-src 'self'; connect-src 'self'; script-src 'self' https://www.google-analytics.com; img-src 'self' https://www.google-analytics.com; report-uri https://mi11er.report-uri.io/r/default/csp/enforce;"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Expect-CT",
            "value": "max-age=0, report-uri='https://mi11er.report-uri.com/r/d/ct/reportOnly'"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=180"
          }
        ]
      },
      {
        "source" : "**/*.@(html)",
        "headers" : [
          {
            "key" : "X-XSS-Protection",
            "value" : "1; mode=block"
          },
          {
            "key" : "X-Frame-Options",
            "value" : "DENY"
          },
          {
            "key" : "Content-Security-Policy",
            "value" : "default-src 'self'; connect-src 'self'; script-src 'self' https://www.google-analytics.com; img-src 'self' https://www.google-analytics.com; report-uri https://mi11er.report-uri.io/r/default/csp/enforce;"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Expect-CT",
            "value": "max-age=0, report-uri='https://mi11er.report-uri.com/r/d/ct/reportOnly'"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=180"
          }
        ]
      }
    ]
  }
}
