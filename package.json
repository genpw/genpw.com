{
  "name": "genpw.com",
  "version": "1.0.17",
  "private": true,
  "description": "Website for genpw",
  "homepage": "https://genpw.com",
  "bugs": {
    "url": "https://github.com/genpw/genpw.com/issues"
  },
  "license": "MIT",
  "author": "Matthew Miller <matthew@mi11er.net> (https://mi11er.net)",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/genpw/genpw.com.git"
  },
  "scripts": {
    "prebuild": "run-p lint clean",
    "build": "per-env",
    "build:development": "babel-node lib/build.js --buildOnly",
    "build:production": "babel-node lib/build.js --buildOnly --production",
    "clean": "rimraf dist firebase-debug.log npm-debug.log yarn-error.log",
    "precommit": "run-s lint-staged pretty-quick nsp",
    "deploy": "per-env",
    "predeploy:production": "build",
    "deploy:production": "firebase deploy",
    "postdeploy:production": "sonarwhal https://genpw.com >sonarwhal.scan",
    "lint": "eslint --fix .",
    "lint-staged": "lint-staged",
    "nsp": "nsp check",
    "semantic-release": "semantic-release",
    "start": "per-env",
    "start:development": "babel-node lib/build.js",
    "pretty-quick": "pretty-quick --staged"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "genpw": "2.0.11",
    "picnic": "6.5.0",
    "umbrellajs": "2.10.2"
  },
  "devDependencies": {
    "@mi11er/eslint-config": "2.4.1",
    "@semantic-release/changelog": "2.1.2",
    "@semantic-release/exec": "2.3.0",
    "@semantic-release/git": "5.0.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-loader": "7.1.5",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.29.3",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.16.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-no-unsafe-innerhtml": "1.0.16",
    "eslint-plugin-optimize-regex": "1.2.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-scanjs-rules": "0.2.1",
    "eslint-plugin-security": "1.7.1",
    "firebase-tools": "3.19.3",
    "husky": "0.14.3",
    "jstransformer-pug": "0.4.0",
    "lint-staged": "7.3.0",
    "metalsmith": "2.6.3",
    "metalsmith-layouts": "2.3.1",
    "metalsmith-markdown": "0.2.2",
    "metalsmith-sass": "1.7.0",
    "minimist": "1.2.8",
    "modernizr": "3.13.1",
    "modernizr-loader": "1.0.1",
    "node-sass": "4.9.1",
    "npm-run-all": "4.1.5",
    "nsp": "3.2.1",
    "per-env": "1.0.2",
    "prettier": "1.19.1",
    "pretty-quick": "1.11.1",
    "pug": "2.0.3",
    "pug-cli": "1.0.0-alpha6",
    "queue": "4.5.1",
    "rimraf": "2.7.1",
    "semantic-release": "15.5.0",
    "sonarwhal": "1.11.2",
    "sort-package-json": "1.57.0",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.47.0",
    "webpack-merge": "4.2.2"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/exec",
        "cmd": "tar -czvf Site_Build.tgz dist firebase.json"
      },
      {
        "path": "@semantic-release/git",
        "assets": ["**"]
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/exec",
        "cmd": "npx firebase deploy"
      },
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "Site_Build.tgz",
            "label": "Site Build"
          }
        ]
      }
    ]
  }
}
